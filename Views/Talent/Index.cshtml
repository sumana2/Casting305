@model PagedList.IPagedList<WebApplication1.Models.TalentModel>
@using PagedList.Mvc;  

<link href="~/Content/PagedList.css" rel="stylesheet" />  

<h4>
    @Html.ActionLink("Add New Talent", "Add")
</h4>
@using (Html.BeginForm("Index", "Talent", FormMethod.Get))
{
    <p>
        Search: @Html.TextBox("search", ViewBag.FilterValue as string)
        <input type="submit" value="Find" />
    </p>
}  

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-3 tile">
            <div class="thumbnail">
                @Html.DisplayFor(modelItem => item.ProfilePicture)
                <img src="http://placehold.it/242x200" alt="...">
                <div class="caption">
                    <h3>@Html.ActionLink(string.Format("{0} {1}",item.FirstName, item.LastName), "Edit", new { id = item.ID })</h3>
                    <p>Height: @Html.DisplayFor(modelItem => item.Height) Eye Color: @Html.DisplayFor(modelItem => item.EyeColor) Hair Color: @Html.DisplayFor(modelItem => item.HairColor)</p>
                    <p>@Html.DisplayFor(modelItem => item.Email)</p>
                    <p>@Html.DisplayFor(modelItem => item.Phone)</p>
                    <p>@Html.DisplayFor(modelItem => item.Representative)</p>
                </div>
            </div>
        </div>
    }
</div>

@Html.PagedListPager(Model, pageNo => Url.Action("Index", new { pageNo, sortOrder = ViewBag.CurrentSortOrder, sortDirection = ViewBag.CurrentsortDirection, filterValue = ViewBag.FilterValue }))

