<div class="form-group">
    @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <ul id="projectRoles" class="nav nav-pills nav-stacked role">
            @foreach (var item in Model.Roles)
            {
                @Html.EditorFor(modelItem => item);
            }
        </ul>
        <div>
            <button id="addRole" type="button" class="btn btn-default" aria-label="Left Align">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#addRole").click(function () {
            var count = $("#projectRoles").children().length;

            $.ajax({
                url: "/Project/AddRole",
                cache: false,
                data: { count: count },
                success: function (html) { $("#projectRoles").append(html); }
            });
            return false;
        });

        $('.ethic-apperance').each(function () {
            var div = $(this);
            var values = div.children('input:hidden').val();
            
            div.find('input:checkbox').each(function () {
                if (values.indexOf(this.value) >= 0) {
                    $(this).prop('checked', true);
                }
            });
        });
    });

    function deleteRole(btn) {
        btn.parent().next().remove();
        btn.parent().remove();
    }

    function updateEthicApperance(div) {
        var checkedValues = div.find('input:checkbox:checked').map(function () {
            return this.value;
        }).get();
        
        div.children('input:hidden').val(checkedValues);
    }
</script>