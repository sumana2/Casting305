<div class="form-group">
    @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <ul id="projectRoles" class="nav nav-pills nav-stacked role">
            @foreach (var item in Model.Roles)
            {
                @Html.EditorFor(modelItem => item);
            }
        </ul>
        <div>
            <button id="addRole" type="button" class="btn btn-default" aria-label="Left Align">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>

<script>
    $("#addRole").click(function () {
        var count = $("#projectRoles").children().length;

        $.ajax({
            url: "/Project/AddRole",
            cache: false,
            data: { count: count },
            success: function (html) { $("#projectRoles").append(html); }
        });
        return false;
    });
</script>