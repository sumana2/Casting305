@model WebApplication1.Models.TalentModel

<div class="col-sm-6 col-md-3 tile">
    <div class="thumbnail tileHeight">
        <div class="tileImageDiv">
            <img src="@Html.DisplayFor(model => model.ProfilePicture)" class="tileImage">
        </div>
        <div class="caption">
            <div>
                <h3 class="tileTitle">@Html.ActionLink(string.Format("{0} {1}", Model.FirstName, Model.LastName), "Edit", new { id = Model.ID })</h3>
                @if (Model.ShowCheck)
                {
                    <span class="glyphicon @Model.CheckClass tileCheck" aria-hidden="true">
                        <input type="hidden" value="@Model.ID" />
                    </span>
                }
            </div>
            <span><b>Height:</b> @Html.DisplayFor(model => model.Height)</span><br />
            <span><b>Eye Color:</b> @Html.DisplayFor(model => model.EyeColor)</span><br />
            <span><b>Email:</b> @Html.DisplayFor(model => model.Email)</span><br />
            <span><b>Phone:</b> @Html.DisplayFor(model => model.Phone)</span><br />
            <span><b>Representative:</b> @Html.DisplayFor(model => model.Representative)</span>
        </div>
    </div>
</div>